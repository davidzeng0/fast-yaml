{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"outDir": "build",
		"strict": true,
		"allowUnreachableCode": false,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"types": ["node"],
		"declaration": true
	},

	"include": [
		"src"
	]
}